<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task Management</title>
    <link rel="stylesheet" href="/stylesheets/Style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <form action="/create" method="post">
            <div class="form px-10 py-10 text-white">
                 <input class="block w-full rounded-md outline-none px-5 py-2 bg-zinc-800" type="text" placeholder="Task Title Is here.." name="title">
                    <textarea class="block w-full rounded-md outline-none mt-2 px-5 py-2 resize-none bg-zinc-800" placeholder="Write Your Task in Detail" name="details"></textarea>
                 <input class="cursor-pointer mt-2 bg-blue-600 px-5 py2" type="Submit" value="Create Task">
            </div>
        </form>
        <div class="tasks flex gap-3 flex-wrap p-10 ">
            <!-- Tasks will be displayed here -->
            <% if(files.length > 0){ %>
            <% files.forEach(function(val){ %>
                <div class="task w-72 px-10 py-4 rounded-md bg-zinc-800">
                    <h1  class="text-white text-3xl tracing-tighter"><%=  val %></h1>

                    <a class="text-blue-500 inline-block mt-3" href="/file/<%=val%>">Read More..</a>
                    <!-- <a class="text-blue-500 inline-block mt-3 px-9" href="/">Delete</a> -->
                </div>
            <% })%>
            <%} else { %>
                <h3 class="text-zinc-600">No Task Yet</h3>
            <%}%>
            
            
            
        </div>
    </div>
    <script src="javascript/script.js"></script>
</body>
</html>